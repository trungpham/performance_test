<% content_for :javascript do %>
  <%= javascript_include_tag 'jquery-1.10.2.min' %>
  <%= javascript_tag do %>
    $(function() {
      
      $('a').on('click', function() {
        var startTime = (new Date()).getTime(),
            baseUrl = /([^?]*)/.exec($(this).attr('href'))[0];
        
        $(this).attr('href', baseUrl + '?' + startTime);
        return true;
      });
      
    });
  <% end %>
<% end %>

